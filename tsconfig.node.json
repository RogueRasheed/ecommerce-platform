{
  "compilerOptions": {
    "target": "ES2023",
    "lib": ["ES2023"],
    "module": "ESNext",
    "moduleResolution": "node", // Changed from "bundler" for Node.js
    "outDir": "./dist", // Output compiled files here
    "rootDir": "./server", // Look for .ts files in server folder
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noEmit": false // Allow output (remove this line if already false)
  },
  "include": ["server/**/*.ts"] // Include all .ts files in server folder
}